@model Web.SHC.Models.Movies
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MovieDetail</title>
</head>
<body>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Movie Detail</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                <div id="displayimage">
                    <img id="img" style="width:200px; height:300px" src="~/@Model.Image" />
                </div>
            </div>
            <div class="col-md-8">

                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Title">Characters:</label>
                    <div class="col-sm-10">
                        <p>
                            @foreach (var characters in Model.Characters)
                            {
                                @characters.Name <span> <b> , </b></span>
                            }
                        </p>
                    </div>
                </div>

                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Title">Title</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(movie => movie.Title, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Rating">IMDB Rating</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(movie => movie.Rating, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Year">Year</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(movie => movie.Year, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Plot">Plot Summary</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(movie => movie.PlotSummary, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
</body>
</html>
