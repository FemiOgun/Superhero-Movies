@model Web.SHC.Models.Character
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CharacterDetail</title>
</head>
<body>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Character Detail</h4>
    </div>
    <div class="modal-body">
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="header header-danger text-center">
                @ViewData["ErrorMessage"]
            </div>
        }
        <div class="row">
            <div class="col-md-4">
                <div id="displayimage">
                    <img id="img" style="width:200px; height:300px" src="~/@Model.Image" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="name">Movie :</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(character => character.Movies.Title, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="name">Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(character => character.Name, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Abilities">Abilities</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(character => character.Abilities, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group detailpage">
                    <label class="control-label col-sm-2" for="Bio">Bio</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(character => character.Bio, new { @class = "form-control", required = "required", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>
</body>
</html>
